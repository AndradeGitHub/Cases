@model List<ubs.brasil.qualitycontrol.comum.entidade.PerfilDeRisco>
   
@if (Model != null && Model.Count > 0)
{
    string label = string.Empty;
    if (Model[0].Acao.ToUpper().Equals("DIARIO"))
    {
        label = "Diária";
    }
    if (Model[0].Acao.ToUpper().Equals("MENSAL"))
    {
        label = "Mensal";
    }
    if (Model[0].Acao.ToUpper().Equals("EXCECAO"))
    {
        label = "Diária";
    }

    <tr class="tabelaLimiteDiarioTopo">
        <td style="border: 1px solid #000000; width: 50px; padding-left: 5px;">Perfil de Risco da Carteira</td>
        <td align="center" style="border: 1px solid #000000;" colspan="2">
            <table width="100%">
                <tr>
                    <td align="center" width="100%" colspan="2">Valorização Patrimonial @label (%)</td>
                </tr>
                <tr> 
                    <td width="50%">Inicial</td>
                    <td width="50%">Final</td>
                </tr>
            </table>
        </td>
        <td align="center" style="border: 1px solid #000000;" colspan="2">
            <table width="100%">
                <tr>
                    <td align="center" width="100%" colspan="2">Valorização @label da Cota(%)</td>
                </tr>
                <tr>
                    <td width="50%">Inicial</td>
                    <td width="50%">Final</td>
                </tr>
            </table>        
        </td>
    </tr>        
    int i = 0;

    foreach (ubs.brasil.qualitycontrol.comum.entidade.PerfilDeRisco perfilRisco in Model)
    {                               
        <tr class="tabelaLimiteDiarioRegistro">
            <td style="border: 1px solid #000000; width:200px; padding-left: 5px;">@Html.Hidden(string.Concat("codPerfilRiscoHidden_", i), perfilRisco.codPerfilRisco) @perfilRisco.codPerfilRisco</td>
            <td style="border: 1px solid #000000; padding-left: 5px;">@Html.TextBox(string.Concat("vlLimiteMinPatrimonial_", perfilRisco.codPerfilRisco), "", new { onKeyPress = "return somenteNum()", maxlength = 8, style = "text-align:right" })</td>
            <td style="border: 1px solid #000000; padding-left: 5px;">@Html.TextBox(string.Concat("vlLimiteMaxPatrimonial_", perfilRisco.codPerfilRisco), "", new { onKeyPress = "return somenteNum()", maxlength = 8, style = "text-align:right" })</td>
            <td style="border: 1px solid #000000; padding-left: 5px;">@Html.TextBox(string.Concat("vlLimiteMinDiaria_", perfilRisco.codPerfilRisco), "", new { onKeyPress = "return somenteNum()", maxlength = 8, style = "text-align:right" })</td>
            <td style="border: 1px solid #000000; padding-left: 5px;">@Html.TextBox(string.Concat("vlLimiteMaxDiaria_", perfilRisco.codPerfilRisco), "", new { onKeyPress = "return somenteNum()", maxlength = 8, style = "text-align:right" })</td>
        </tr>     
    
        i++;
    }            
}

<script>document.getElementById("dtIniVigencia").focus();</script>